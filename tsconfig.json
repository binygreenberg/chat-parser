{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    }
  },
  "include": [
    "**/src/**/*.ts"
  ],
  "exclude": [
    "packages"
  ]
}
